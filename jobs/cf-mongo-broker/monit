check process process-watcher
  with pidfile /var/vcap/sys/run/cf-mongo-broker/process-watcher.pid
  start program "/var/vcap/jobs/cf-mongo-broker/bin/process-watcher_ctl start" with timeout 60 seconds
  stop program "/var/vcap/jobs/cf-mongo-broker/bin/process-watcher_ctl stop" with timeout 60 seconds
  group vcap

check process cf-mongo-broker
  with pidfile /var/vcap/sys/run/cf-mongo-broker/unicorn.pid
  start program "/var/vcap/jobs/cf-mongo-broker/bin/cf-mongo-broker_ctl start" with timeout 60 seconds
  stop program "/var/vcap/jobs/cf-mongo-broker/bin/cf-mongo-broker_ctl stop" with timeout 60 seconds
  group vcap

check process broker-nginx
  with pidfile /var/vcap/sys/run/cf-mongo-broker/nginx.pid
  start program "/var/vcap/jobs/cf-mongo-broker/bin/nginx_ctl start"
  stop program "/var/vcap/jobs/cf-mongo-broker/bin/nginx_ctl stop"
  group vcap

check process route-registrar
  with pidfile /var/vcap/sys/run/cf-mongo-broker/route-registrar.pid
  start program "/var/vcap/jobs/cf-mongo-broker/bin/route-registrar_ctl start" with timeout 10 seconds
  stop program "/var/vcap/jobs/cf-mongo-broker/bin/route-registrar_ctl stop" with timeout 10 seconds
  group vcap
